import matplotlib.pyplot as plt
import pandas as pd
import numpy as np

# Simular dados de temperatura e umidade coletados a cada 2 segundos por 5 minutos
tempo = pd.date_range(start='2025-06-13 12:00:00', periods=150, freq='2S')
temperatura = 24.5 + np.random.normal(0, 0.05, size=len(tempo))  # Temperatura em °C com pequenas variações
umidade = 55 + np.random.normal(0, 0.1, size=len(tempo))        # Umidade em % com pequenas variações

# Criar DataFrame
df = pd.DataFrame({'Tempo': tempo, 'Temperatura': temperatura, 'Umidade': umidade})

# Salvar em CSV para uso futuro (opcional)
df.to_csv('dados_simulados.csv', index=False)

# Plotar gráfico de Temperatura ao longo do tempo
plt.figure(figsize=(10, 5))
plt.plot(df['Tempo'], df['Temperatura'], label='Temperatura (°C)', color='tab:red')
plt.title('Variação da Temperatura durante a Simulação')
plt.xlabel('Tempo')
plt.ylabel('Temperatura (°C)')
plt.xticks(rotation=45)
plt.grid(True)
plt.legend()
plt.tight_layout()

# Salvar figura
plt.savefig('grafico_temperatura.png')

plt.show()
